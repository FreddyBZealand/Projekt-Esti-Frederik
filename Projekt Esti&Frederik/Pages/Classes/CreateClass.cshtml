@page
@model Projekt_Esti_Frederik.Pages.Classes.CreateClassModel
@{
    ViewData["Title"] = "Create Class Page";
}

<h1 class="fw-bold text-center py-4 mb-4" style="font-size: 35px; color: #2a2a2a;">
    <i class="bi bi-easel3-fill me-2"></i> Create Class 
</h1>

<div class="row">
    <div class="col-md-6, fw-bold" style="color: #3a3a3a;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-4">
                <label asp-for="@Model.TheClass.ClassName" class="control-label"></label>
                <input asp-for="@Model.TheClass.ClassName" class="form-control" />
                <span asp-validation-for="@Model.TheClass.ClassName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <button type="submit" value="Create" class="btn btn-primary fw-semibold px-3 text-white exam-btn"
                        style="background-color:#4a90e2; border-color:#4a90e2;">
                    <i class="bi bi-pencil-square me-1"></i> Create new class
                </button>
                                
                <a asp-page="./Classes" class="btn btn-secondary fw-semibold px-3 text-white exam-btn"
                    style="background-color:#6c757d; border-color:#6c757d;">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to list
                </a>             

            </div>
        </form>
    </div>
</div>
@page
@model Projekt_Esti_Frederik.Pages.Classes.DeleteClassModel
@{
    ViewData["Title"] = "Delete Class";
}

<h1 class="fw-bold text-center py-4 mb-4" style="font-size: 35px; color: #2a2a2a;">
    <i class="bi bi-trash me-2"></i> Delete Class
</h1>

<div>
    <h4>Class Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Class ID
        </dt>
        <dd class="col-sm-10">
            @Model.TheClass.ClassId
        </dd>
        <dt class="col-sm-2">
            Class Name
        </dt>
        <dd class="col-sm-10">
            @Model.TheClass.ClassName
        </dd>
        </dl>
    </div>
    <hr />
     
    <h3 style="font-size: 17px; color: #d9534f;">Are you sure you want to delete this class?</h3>

    <form method="post">
        <input type="hidden" asp-for="TheClass.ClassId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Classes" class="btn btn-secondary">Cancel</a>
    </form>

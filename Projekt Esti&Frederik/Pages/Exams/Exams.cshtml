@page
@model Projekt_Esti_Frederik.Pages.Exams.ExamModel
@{
    ViewData["Title"] = "Exam page";
}

<h1 class="fw-bold text-center py-4 mb-4" style="font-size: 35px; color: #2a2a2a;">
    <i class="bi bi-calendar3 me-2"></i> Exam Page
</h1>

<div class="row gy-4">

    @if (Model != null)
    {
        @foreach (Models.Exam item in Model.exams)
        {
            <div class="col-md-6">
                <div class="exam-card shadow-sm">
                  
                    <h5 class="fw-bold mb-3" style="color: #000;">
                        @item.ExamName
                    </h5>

                    <div class="mb-2 d-flex" style="color: #3a3a3a;">
                        <div class="fw-bold me-2" style="min-width: 140px;">Exam ID:</div>
                        <div class="fw-bold">@item.ExamId</div>
                    </div>

                    <div class="mb-2 d-flex" style="color: #3a3a3a;">
                        <div class="fw-bold me-2" style="min-width: 140px;">Submit date:</div>
                        <div class="fw-bold">@item.ExamSubmissionDate</div>
                    </div>

                    <div class="mb-2 d-flex" style="color: #3a3a3a;">
                        <div class="fw-bold me-2" style="min-width: 140px;">Exam date:</div>
                        <div class="fw-bold">@item.ExamDate</div>
                    </div>

                    <div class="mb-2 d-flex" style="color: #3a3a3a;">
                        <div class="fw-bold me-2" style="min-width: 140px;">Re-submit date:</div>
                        <div class="fw-bold">@item.ReExamSubmissionDate</div>
                    </div>

                    <div class="mb-3 d-flex" style="color: #3a3a3a;">
                        <div class="fw-bold me-2" style="min-width: 140px;">Re-exam date:</div>
                        <div class="fw-bold">@item.ReExamDate</div>
                    </div>


                    <div class="d-flex">
                        <a asp-page="./InfoExam" asp-route-id="@item.ExamId"
                           class="btn btn-primary btn-sm text-white exam-btn me-2"
                           style="background-color:#4a90e2; border-color:#4a90e2;">
                           <i class="bi bi-info-circle me-1"></i> Details
                        </a>

                        <a asp-page="/Teachers/TeacherDesignation" asp-route-examId="@item.ExamId"
                           class="btn btn-secondary btn-sm text-white exam-btn me-2"
                           style="background-color:#6c757d; border-color:#6c757d;">
                           <i class="bi bi-person-fill-add me-1"></i> Assign teacher

                        </a>

                        <a asp-page="./DeleteExam" asp-route-id="@item.ExamId"
                           class="btn btn-danger btn-sm text-white exam-btn"
                           style="background-color:#d9534f; border-color:#d9534f;">
                           <i class="bi bi-trash me-1"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    }
</div>

<div class="text-start mt-4">
    <a asp-page="./CreateExam"
       class="btn btn-primary fw-semibold px-3 text-white exam-btn"
       style="background-color:#4a90e2; border-color:#4a90e2;">
        <i class="bi bi-pencil-square me-1"></i> Create new exam
    </a>
</div>


@page
@model Projekt_Esti_Frederik.Pages.Teachers.DeleteTeacherModel
@{
    ViewData["Title"] = "Delete Teacher";
}

<h1 class="fw-bold text-center py-4 mb-4" style="font-size: 35px; color: #2a2a2a;">
    <i class="bi bi-trash me-2"></i> Delete Teacher
</h1>

<div>
    <h4>Teacher Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Teacher ID
        </dt>
        <dd class="col-sm-10">
            @Model.teacher.TeacherId
        </dd>

        <dt class="col-sm-2" >
            First name
        </dt>
        <dd class="col-sm-10">
            @Model.teacher.FirstName
        </dd>

        <dt class="col-sm-2">
            Last name
        </dt>
        <dd class="col-sm-10">
            @Model.teacher.LastName
        </dd>

        <dt class="col-sm-2">
            Initials
        </dt>
        <dd class="col-sm-10">
            @Model.teacher.Initials
        </dd>
    
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.teacher.Email
        </dd>
    </dl>
</div>
    <hr />     

<h3 style="font-size: 17px; color: #d9534f;">Are you sure you want to delete this teacher?</h3>

<form method="post">
    <input type="hidden" asp-for="teacher.TeacherId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Teachers" class="btn btn-secondary">Cancel</a>
</form>

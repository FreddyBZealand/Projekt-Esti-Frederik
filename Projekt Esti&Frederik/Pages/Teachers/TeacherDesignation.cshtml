@page
@model Projekt_Esti_Frederik.Pages.Teachers.TeacherDesignationModel
@{
    ViewData["Title"] = "Teacher designation";
}

<h2 class="fw-bold text-center py-5 mb-5" style="font-size: 2rem; color: #2a2a2a;">
    <i class="bi bi-person-badge me-2" style="color:#666;"></i> Teacher Designation</h2>

<div class="row gy-4">
    @if (Model != null)
    {
        @foreach (Models.Teacher item in Model.teachers)
        {
            <div class="col-md-6">
                <div class="teacher-card shadow-sm">

                <h5 class="fw-bold mb-3" style="color: #000;">
                        @item.FirstName
                        @item.LastName
                </h5>

                <div class="mb-2 d-flex" style="color: #3a3a3a;">
                        <div class="fw-bold me-2" style="min-width: 140px;">Initials:</div>
                   <div class="fw-bold">@item.Initials</div>
                </div>

                <div class="mb-4 d-flex" style="color: #3a3a3a;">
                        <div class="fw-bold me-2" style="min-width: 140px;">Email:</div>
                    <div class="fw-bold">@item.Email</div>
                </div>               

                <div class="mb-2">
                <div class="form-check">
                            <input type="radio" class="form-check-input" id="examiner" name="examiner" value="option1">Examiner
                            <label class="form-check-label" for="examiner"></label>
                </div>
                    </div>

                    <div class="mb-2">
                <div class="form-check">
                            <input type="radio" class="form-check-input" id="InternalCensor" name="InternalCensor" value="InternalCensor">Internal censor
                            <label class="form-check-label" for="InternalCensor"></label>
                </div>
                    </div>

                <div class="d-flex">
                    <button type="submit" class="btn btn-primary btn-sm text-white exam-btn me-2"
                            style="background-color:#4a90e2; border-color:#4a90e2;"> Assign teacher
                    </button>
                </div>
            </div>
            </div>
        }
    }
</div>
@page
@model Projekt_Esti_Frederik.Pages.Teachers.TeatcherModel
@{
    ViewData["Title"] = "Teacher Page";
}

<h1 class="fw-bold text-center py-4 mb-4" style="font-size: 35px; color: #2a2a2a;">
    <i class="bi bi-people-fill me-2"></i> Teacher page
</h1>

<div class="row gy-4">

    @if (Model != null)
    {
        @foreach (Models.Teacher item in Model.teacherService)
        {
            <div class="col-md-6">
                <div class="teacher-card shadow-sm">

                    <h5 class="fw-bold mb-3" style="color: #000;">
                        @item.FirstName
                        @item.LastName
                    </h5>

                    <div class="mb-2 d-flex" style="color: #3a3a3a;">
                        <div class="fw-bold me-2" style="min-width: 140px;">Teacher id:</div>
                        <div class="fw-bold">@item.TeacherId</div>
                    </div>

                    <div class="mb-2 d-flex" style="color: #3a3a3a;">
                        <div class="fw-bold me-2" style="min-width: 140px;">Initials:</div>
                        <div class="fw-bold">@item.Initials</div>
                    </div>

                    <div class="mb-4 d-flex" style="color: #3a3a3a;">
                        <div class="fw-bold me-2" style="min-width: 140px;">Email:</div>
                        <div class="fw-bold">@item.Email</div>
                    </div>
                    
                    <div class="d-flex">
                        <a asp-page="/Exams/Exams" asp-route-teacherid="@item.TeacherId"
                           class="btn btn-primary btn-sm text-white exam-btn me-2"
                           style="background-color:#4a90e2; border-color:#4a90e2;">
                            <i class="bi bi-bookmarks-fill me-1"></i> Assigned exams
                        </a>
                    </div>                    
                </div>
            </div>
        }
    }
</div>

<div class="text-start mt-4">
    <a asp-page="./CreateTeacher"
       class="btn btn-primary fw-semibold px-3 text-white exam-btn"
       style="background-color:#4a90e2; border-color:#4a90e2;">
        <i class="bi bi-person-plus me-1"></i> Add teacher
    </a>
</div>